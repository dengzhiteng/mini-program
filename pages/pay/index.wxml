<view class="cart">
  <view class="receiveAddressWarp">
    <view class="receiveAddress" >
        <view class="row">
          <text class="receiveName">{{receiveInfo.userName}}</text>
          <text class="receivePhone">{{receiveInfo.telNumber}}</text>
        </view>
        <view class="row">
          <text class="addressAll">{{receiveInfo.addressAll}}</text>
        </view>
    </view>
  </view>
  <view class="goodList" wx:if="{{cart.length}}">
    <view class="goodListTitle">购物车</view>
    <view class="goodListItem" wx:for="{{cart}}" wx:key="goods_id">
      <view class="image">
        <navigator  url="/pages/goods_detail/index?goods_id={{item.goods_id}}">
          <image src="{{item.goods_small_logo}}" mode="widthFix"></image>
        </navigator>
      </view>
      <view class="info">
        <text class="goods_name">{{item.goods_name}}</text> 
        <view class="btm_tool">
          <view class="goods_price">￥{{item.goods_price}}</view>
          <view class="btn">
            <view class="num">X {{item.num}} </view>
          </view>
        </view>
      </view>
    </view>
  </view>
  
  <view class="btm_account" wx:if="{{cart.length}}">
    <view class="info">
      <view>合计：<text class="totalPrice">￥{{totalPrice}}</text></view>
      <text>包含运费</text>
    </view>
    <view class="account_pay" bindtap="handleOrderPay">支付({{totalPrice}})</view>
  </view>
</view>