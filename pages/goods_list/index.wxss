/* pages/goods_list/index.wxss */
.goodsList .goods_item {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #ccc;
}

.goodsList .goods_images {
  width: 33.333%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.goodsList .goods_images image {
  widows: 70%;
}

.goodsList .goods_info {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 40rpx 10rpx;
}

.goodsList .goods_info .goods_name {
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goodsList .goods_info .goods_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
.goodsList .loading{
  text-align: center;
  line-height: 80rpx;
}