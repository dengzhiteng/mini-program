<view class="cart">
  <view class="receiveAddressWarp">
    <button class="receiveAddressBtn" type="primary" plain bindtap="handleChooseAddress" wx:if="{{!receiveInfo.provinceName}}">获取收货地址</button>
    <view wx:else class="receiveAddress" >
        <view class="row">
          <text class="receiveName">{{receiveInfo.userName}}</text>
          <text class="receivePhone">{{receiveInfo.telNumber}}</text>
        </view>
        <view class="row">
          <text class="addressAll">{{receiveInfo.addressAll}}</text>
        </view>
    </view>
  </view>

  <view class="goodList" wx:if="{{cart.length}}">
    <view class="goodListTitle">购物车</view>
    <view class="goodListItem" wx:for="{{cart}}" wx:key="goods_id">
      <view class="check" bindtap="handleChecked" data-index="{{index}}" ><checkbox checked="{{item.isChecked}}"/></view>
      <view class="image">
        <navigator  url="/pages/goods_detail/index?goods_id={{item.goods_id}}">
          <image src="{{item.goods_small_logo}}" mode="widthFix"></image>
        </navigator>
      </view>
      <view class="info">
        <text class="goods_name">{{item.goods_name}}</text> 
        <view class="btm_tool">
          <view class="goods_price">￥{{item.goods_price}}</view>
          <view class="btn">
            <button class="mini-btn reduceNum" type="default" size="mini" bindtap="handeleReduceNum" data-index="{{index}}" data-num="{{item.num}}"  >-</button>
            <view class="num"> {{item.num}} </view>
            <button class="mini-btn addNum" type="default" size="mini" bindtap="handeleAddNum" data-index="{{index}}"  data-num="{{item.num}}">+</button>
          </view>
        </view>
      </view>
    </view>
  </view>
  <view wx:else class="noDataTips">
    <text>啥也没有~</text>
    <navigator url="/pages/category/index" open-type="switchTab">去购物吧~</navigator>
  </view>
  <view class="btm_account" wx:if="{{cart.length}}">
    <view class="check" bindtap="handleCheckedAll">
      <label class="checkbox">
        <checkbox value="cb" checked="{{isCheckedAll}}"/>全选
      </label>
    </view>
    <view class="info">
      <view>合计：<text class="totalPrice">￥{{totalPrice}}</text></view>
      <text>包含运费</text>
    </view>
    <view class="account_pay" bindtap="handleSettlement">结算({{totalPrice}})</view>
  </view>
</view>